---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/home.scss"

export interface Props {
	title: string;
	footer: boolean;
	property?:string;
}

const props = Astro.props;
---

<!DOCTYPE html>
<html lang="en" data-theme="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Help us build the cutting edge data platform for the serverless era." />
		<meta name="viewport" content="width=device-width,initial-scale=1" />
		<link rel="Montplex" href="/favicon.ico" type="image/x-icon">
		<meta name="generator" content="Montplex: Serverless Cache for Global Business" />
		<title>{props.title}</title>
		<meta name="keywords" content="redis,serverless cache,global database,serverless ">
		<meta property="og:title" content={ props?.property ?? ''}>
		<meta property="og:description" content="Help us build the cutting edge data platform for the serverless era.">
		<meta property="og:url" content="https://www.montplex.com/">
		<meta property="og:site_name" content={ props?.property ?? props.title}>
		<meta property="og:image" content="/og-home.png">
		<meta property="og:type" content="website">

		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:site" content="@MontplexDB">
		<meta name="twitter:creator" content="@MontplexDB">
		<meta name="twitter:title" content={ props?.property ?? props.title}>
		<meta name="twitter:description" content="Help us build the cutting edge data platform for the serverless era.">
		<meta name="twitter:image" content="/og-home.png">

		<meta property="og:locale" content="en_US">
	</head>
	<body>
		<Header />
		<slot />
		{props.footer && <Footer />}
	</body>
</html>

<style is:global lang="scss">
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@100;300;400;500;600;700;800;900&display=swap&subset=latin');



body {
	-ms-overflow-style: none;
	scrollbar-width: none;
	overflow: -moz-scrollbars-none;
	overflow-y: scroll;
	font-family: Inter, sans-serif;
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
}

::-webkit-scrollbar {
	width: 0;
	height: 0;
}
</style>
